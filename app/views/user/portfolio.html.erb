<h1>My Portfolio</h1>
<p>Message me at
  <%= @user.email %></p>
<p>
  Created at
  <%= @user.created_at %>
</p>
<div>
  <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Ticker</th>
      <th scope="col">Price</th>
      <th scope="col">Company</th>
      <th scope="col">Searched</th>
    </tr>
  </thead>
  <tbody>
    <%= render @stocks || 'No active stocks' %>
  </tbody>
</table>
</div>

<div id="plot-container">
  <svg id="plot"></svg>
</div>
